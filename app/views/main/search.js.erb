$(".showpanel").html("<%= escape_javascript(render 'search') %>").fadeIn(1000);
console.log("RENDERED SEARCH..");

$("#search").keyup(function(){
  _this = this;
  $.each($("#table tbody").find("tr"), function() {
    if($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) == -1)
     $(this).hide();
   else
    $(this).show();
});
}); 

