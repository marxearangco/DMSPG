<div class="row">
    <h3> &nbsp;&nbsp;<%= @search %></h3>
    <div class="col-xs-6 hidden-xs hidden-sm">
        <div class="input-group">
            <input type="text" class="form-control" id="search" placeholder="Search here" aria-describedby="basic-addon2">
            <span class="input-group-addon" id="basic-addon2"><i class="fa fa-search fa-lg"></i></span>
        </div>
    </div>
    <div class="col-xs-12 hidden-md hidden-lg">
        <div class="input-group">
            <input type="text" class="form-control" id="search2" placeholder="Search here" aria-describedby="basic-addon2">
            <span class="input-group-addon" id="basic-addon2"><i class="fa fa-search fa-lg"></i></span>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="panel panel-default">
       <table style="background-color: #fff" class="table table-striped table-responsive">
        <thead>
            <tr>
                <th class="hidden-xs hidden-sm col-xs-1">Code</th>
                <th class="col-xs-2">Part No.</th>
                <th class="col-xs-5">Item Name</th>
                <th class="col-xs-1" style="text-align: center";>Qty</th>
                <th class="col-xs-2 hidden-xs hidden-sm"><span class="pull-right">SRP</span></th>
                <th class="col-xs-1 hidden-xs hidden-sm">Location</th>
            </tr>
        </thead>
    </table>
    <div class="div-table-content">
        <table style="background-color: #fff" class="table table-striped table-responsive" id="table">
            <tbody>
                <% @items.each do |i| %>
                <tr>
                 <td class="col-xs-1 hidden-xs hidden-sm"><%= i.code %></td>
                 <td class="col-xs-2"><%= i.partnum %></td>
                 <td class="col-xs-5"><%= link_to i.itemname, view_main_path(i.code), remote: true, data: { toggle: 'modal', target: "#viewitem" } %></td>
                 <td class="col-xs-1 text-center"><span style="text-align: center"><%= i.qtyEnd %></span></td>
                 <td class="hidden-xs hidden-sm col-xs-2"><span class="pull-right"><%= number_with_precision(i.srp, precision: 2, separator: '.', delimiter: ',') %></span></td>
                 <td class="hidden-xs hidden-sm col-xs-1" style="text-align: center;"><%= i.vin %></td>
             </tr>
             <% end %>
         </tbody>
     </table>
 </div>
</div>