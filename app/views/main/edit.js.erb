$('#inventory').html('<%= escape_javascript (render "edit") %>');

$('#updateinv').submit(function(event) {
  var form = $(this);
  $.ajax({
			type: 'POST',
			url: '<%= save_main_path(params[:id]) %>',
			data: form.serialize(),
			//processData: false,
        	//contentType: false,
			success: function(){
				alert('Data updated!');
        	},
						
		});
  
  event.preventDefault();
  
});